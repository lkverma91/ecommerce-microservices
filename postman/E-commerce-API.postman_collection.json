{
  "info": {
    "name": "E-commerce API",
    "description": "API collection for E-commerce microservices via Gateway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api" }
  ],
  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Create User (Register)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"name\": \"John Doe\",\n  \"phone\": \"+1234567890\",\n  \"password\": \"secret123\"\n}"
            },
            "url": "{{baseUrl}}/users"
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users/1"
          }
        },
        {
          "name": "Get User by Email",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users/email/user@example.com"
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/users"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products"
          }
        },
        {
          "name": "List by Category",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products?category=Electronics"
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/1"
          }
        },
        {
          "name": "Create Product (Admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"High performance laptop\",\n  \"price\": 999.99,\n  \"category\": \"Electronics\"\n}"
            },
            "url": "{{baseUrl}}/products"
          }
        }
      ]
    },
    {
      "name": "Inventory",
      "item": [
        {
          "name": "Add/Update Stock",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": 1,\n  \"quantity\": 100\n}"
            },
            "url": "{{baseUrl}}/inventory"
          }
        },
        {
          "name": "Check Stock",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/inventory/check?productId=1&quantity=5"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": 1,\n  \"items\": [\n    { \"productId\": 1, \"quantity\": 2 }\n  ]\n}"
            },
            "url": "{{baseUrl}}/orders"
          }
        },
        {
          "name": "Get Order",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/orders/1"
          }
        },
        {
          "name": "Get Orders by User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/orders/user/1"
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Get Payment",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payments/1"
          }
        },
        {
          "name": "Get Payments by Order",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/payments/order/1"
          }
        }
      ]
    }
  ]
}

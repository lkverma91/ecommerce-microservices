# Production environment variables
# Copy to .env and fill values. NEVER commit .env with real secrets.

SPRING_PROFILES_ACTIVE=prod
EUREKA_URI=http://eureka-server:8761/eureka/

# Database - use managed PostgreSQL (RDS, Cloud SQL) in production
DATABASE_URL=jdbc:postgresql://localhost:5432/user_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=change-me

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Zipkin
ZIPKIN_URL=http://localhost:9411/api/v2/spans

# API Gateway - CRITICAL: Set strong secret in production
JWT_SECRET=change-me-use-openssl-rand-base64-32

# CORS - Restrict to your frontend domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_REPLENISH=10
RATE_LIMIT_BURST=20

# Redis (for API Gateway rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
